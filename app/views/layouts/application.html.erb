    })(window,document,'script','//www.google-analytics.com/analytics.js','ga');

    ga('create', 'UA-57180863-3', 'auto');
    ga('send', 'pageview');
  </script>
</head>
<body>
  <div id="side-widget" class="side-widget">
    <div class="container-container">
      <%= link_to "/" do %>
        <%= image_tag "avatar_author.jpg", class: "img-responsive" %>
      <% end %>
    </div>
    <div class="container-nav">
      <ul class="nav-menu">
        <li class="nav-item"><%= link_to "Currículo", resume_path %></li>
        <!--<li class="nav-item"><%= link_to "Projetos", projects_path %></li>-->
        <li class="nav-item"><%= link_to "Blog", "/" %></li>
        <!--<li class="nav-item"><%= link_to "Séries", series_path %></li>-->
      </ul>
    </div>
    <div class="container-social-media">
      <ul class="footer-social-media">
          <li><a href="https://www.facebook.com/rodrigo.vargas.31337194" class="social-btn facebook"><i class="fa fa-facebook"></i></a></li>
          <li><a href="https://twitter.com/RodrigVargas" class="social-btn twitter"><i class="fa fa-twitter"></i></a></li>
          <li><a href="https://github.com/Rodrigo-Vargas" class="social-btn github"><i class="fa fa-github"></i></a></li>
      </ul>
    </div>
  </div>
  <div class="container-fluid">
    <div class="content">
      <div class="container-trigger-nav clearfix">
        <a id="trigger-nav" class="glyphicon glyphicon-menu-hamburger pull-right visible-xs-block visible-sm-block"></a>
      </div>      
      <%= yield %>
    </div>
  </div>

  <script type="text/javascript" src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js"></script>
  <script type="text/javascript">
    rodrigovg.init();
  </script>
</body>
</html>
