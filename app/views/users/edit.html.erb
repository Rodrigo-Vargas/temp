<div class="container">
  <div class="col-md-offset-3 col-md-6">
    <div class="signup-form">
      <%= form_for @user do |f| %>
        <div class="form-group">
          <label>Nome: </label>
          <%= f.text_field :name, :class=>"form-control" %>
        </div>

        <div class="form-group">
          <label>Email:</label>
          <%= f.text_field :email, :class=>"form-control" %>
        </div>

        <div class="form-group">
          <label>É administrador:</label>
          <%= f.text_field :is_admin, :class=>"form-control" %>
        </div>

        <div class="form-group">
          <label>É assinante:</label>
          <%= f.text_field :is_subscriber, :class=>"form-control" %>
        </div>

        <%= f.submit :Editar, :class=>"btn btn-primary" %>
      <% end %>
      
      <% if @user.errors.any? %>
        <ul class="Signup_Errors">
        <% for message_error in @user.errors.full_messages %>
          <li>* <%= message_error %></li>
        <% end %>
        </ul>
      <% end %>
    </div>
  </div>
</div>