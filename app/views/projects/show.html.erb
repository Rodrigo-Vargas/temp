<div class="container">
  <hr />
  <h1><%= @project.title %></h1>
  <hr />
  <div class="row">
    <div class="col-sm-9">
      <div class="image-slider-container">
        <ul class="image-slider">
          <% @project.images.each do |image| %>
            <li>
              <img class="img-project-carrossel" src="<%= image.server_path %>" alt="">
            </li>
          <% end %>
        </ul>
        <div class="image-slider-control-prev"></div>
        <div class="image-slider-control-next"></div>
      </div>
    </div>
    <div class="col-sm-3">
      <div class="project-description">
        <h4>Descrição</h4>
        <p><%= @project.description %></p>
      </div>
      <div class="project-skills-used">
        <h4>Habilidades desenvolvidas</h4>
        <p><%= @project.skills %></p>
      </div>
      <%= link_to "Visitar site", @project.link, class: 'btn btn-primary' %>
    </div>
  </div>
</div>

<script>
  $(document).ready(function(){
    $('.image-slider').bxSlider({
      adaptiveHeight: true,
      pager: false,
      prevSelector: $(".image-slider-control-prev"),
      nextSelector: $(".image-slider-control-next"),
      nextText: ">",
      prevText: "<"
    });
  });
  
</script>