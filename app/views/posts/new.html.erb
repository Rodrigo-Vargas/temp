<div class="container">
  <h1>Novo post</h1>
  <div class="row">
    <div class="col-md-6 col-md-offset-1">
      <%= form_for @post do |f|  %>
        <div class="form-group">
          <%= f.label :title %>
          <%= f.text_field :title, class: "form-control" %>
        </div>
        
        <div class="form-group">
          <%= f.label :content %>
          <%= f.text_area :content, class: "form-control" %>
        </div>

        <div class="">
          <%= f.submit :class=> "btn btn-primary" %>
        </div>

      <% end %>
    </div>
  </div>
</div>